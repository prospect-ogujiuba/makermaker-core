{
  "name": "makermaker/plugin",
  "description": "Thin Client Makermaker Plugin",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^8.2",
    "mxcro/makermaker-core": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "pestphp/pest": "^2.34",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "MakerMaker\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MakerMaker\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "pest",
    "test:unit": "pest --group=unit",
    "test:quick": "pest --group=unit,smoke --testdox",
    "test:ci": "pest --coverage --min=85",
    "test:all": "pest --testsuite=Unit,Integration,Feature,Acceptance",
    "test:affected": "pest --group!=slow,quarantine"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
